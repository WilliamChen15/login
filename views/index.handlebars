<div class="container">
  <h2 class="title d-grid gap-2 col-3 mx-auto my-5" align="center"><b>Account Login</b></h2>
  <form action="/" method="POST">
    <div class="d-grid gap-2 col-3 mx-auto">
      <div class="input-group mt-3">
        <input class="form-control" type="email" placeholder="請輸入您的Email" name="email" value="{{email}}" required>
      </div>
      <div class="input-group mt-3">
        <input class="form-control" type="password" placeholder="請輸入密碼" name="password" required>
      </div>
      {{#if wrong}}
      <span class="error-mes mt-2" align="center"> {{wrong}}</span>
      {{/if}}
      <div class="mt-3">
        <button class="btn btn-success d-grid gap-2 col-3 mx-auto " type="submit">Sign in</button>
      </div>
    </div>
  </form>
</div>